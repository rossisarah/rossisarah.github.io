      {talks.map(item => (
        <div class="p-6 rounded-lg text-base-content bg-base-200">
          <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
          <p>{item.conference}, {item.location} • {item.date}</p>
          {item.note && <p class="italic text-sm">{item.note}</p>}
        </div>
      ))}
    </div>

    <h2 class="text-2xl font-semibold mt-12 mb-6">Posters</h2>
