---
import Layout from '../layouts/Layout.astro'

import { profile } from '@/settings'
import { publications } from '@/data/cv'
import ProfilePictures from '@/assets/me1.jpeg'
import Hero from '@/components/ui/Hero.astro'
import Grid from '@/components/ui/Grid.astro'
import ArticleList from '@/components/ui/ArticleList.astro'

const { fullName, title, institute, research_areas } = profile

// Selected Publications 
const selectedPublications = publications.filter(p => p.selected)

// News Items
const newsItems = [
  {
    title: "Talk accepted at the 6th International Workshop on Syntactic Cartography",
    date: "July 2025",
    summary: "I'll be presenting my work on Italian negative and generic imperatives in Hong Kong this October.",
    link: "/talks"
  },
  {
    title: "Website launched ðŸŽ‰",
    date: "July 2025",
    summary: "Excited to share my new academic website! Built with Astro + Tailwind CSS.",
  }
]
---

<Layout>
	<!-- Hero Section -->
	<section class='flex items-center gap-12 border-b pb-12'>
		<Hero
			fullName={fullName}
			institute={institute}
			profilePicture={ProfilePictures}
		/>
	</section>

	<!-- Research Interests -->
	<section class='py-12 border-b'>
		<Grid gridTitle='Research Interests' gridItems={research_areas} />
	</section>

	<!-- Selected Publications -->
	<section class='py-12 border-t'>
		<ArticleList listTitle='Selected Publications' listItems={selectedPublications} />
		<a href="/papers" class="block mt-4 text-accent underline">See all publications â†’</a>
	</section>

	<!-- News Section -->
	<section class='py-12 border-t'>
		<h2 class="text-3xl font-bold mb-8">News</h2>
		<div class="space-y-6">
			{newsItems.map(item => (
				<div class="p-4 rounded-lg bg-base-200 text-base-content">
					<h3 class="text-lg font-semibold">{item.title}</h3>
					<p class="text-sm text-base-content/70">{item.date}</p>
					<p class="mt-1">{item.summary}</p>
					{item.link && <a href={item.link} class="text-accent underline">Read more</a>}
				</div>
			))}
		</div>
	</section>
</Layout>
